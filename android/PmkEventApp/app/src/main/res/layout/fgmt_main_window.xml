<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:scaleType = "centerCrop"
         android:src="@drawable/kosciol_jasne_wnetrze" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical"
         android:gravity="top"
         >


          <TextView
              android:id="@+id/textViewHeader"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:fontFamily="serif"
              android:paddingTop="10pt"
              android:text="DUSZPASTERSTWO POLSKOJĘZYCZNE"
              android:textAlignment="center"
              android:textColor="@color/colorFontMainPage"
              android:textSize="24sp"
              android:textStyle="bold" />

          <TextView
              android:id="@+id/textView2"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_gravity="center_horizontal"
              android:fontFamily="serif"
              android:padding="10pt"
              android:text="Wszystkie Msze Święte, Nabożeństwa polskojęzyczne w pobliżu."
              android:textAlignment="center"
              android:layout_below="@+id/textViewHeader"
              android:textColor="@color/colorFontMainPage"
              android:textSize="18sp"
              android:textStyle="bold" />


          <Button
              android:id="@+id/btnRefreshPosition"
              style="@style/Widget.AppCompat.Button.Colored"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@+id/textView2"
              android:layout_gravity="center_horizontal"
              android:layout_marginTop="10pt"
              android:layout_marginBottom="40pt"
              android:paddingLeft="10pt"
              android:paddingRight="10pt"
              android:text="Aktualizuj Pozycję"
              android:textColorLink="@color/design_default_color_primary"
              android:textSize="20sp" />

     </LinearLayout>





</FrameLayout>